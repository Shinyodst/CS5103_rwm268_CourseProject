#include<iostream>
using std::cout;
using std::endl;
using std::cin;

void UniquePerm(char*);

int main()
{
	char word[3];
	cout << "Enter a 3 Letter Word" << endl;
	cout << "Your word is: ";
	cin >> word;
	UniquePerm(word);

}

void UniquePerm(char* word)
{
	char holder[18];
	char temp[3];
	int position = 0;

	for(int i = 0; i < 3; ++i)
	{
		for(int j = 0; j < 3; ++j)
		{
			for(int k = 0; k < 3; ++k)
			{
				int flag = 0;
				if((i==j) || (i==k) || (j==k))
					continue;
				temp[0] = word[i];
				temp[1] = word[j];
				temp[2] = word[k];

				for(int m = 0; m < 18; m = m + 3)
				{
					if((holder[m] == temp[0]) && (holder[m+1] == temp[1]) && (holder[m+2] == temp[2]))
						++flag;
				}

				if(flag > 0)
				{
					continue;
				}
				else
				{
					for(int n = 0; n < 3; ++n)
					{
						holder[position + n] = temp[n];
					}
					position = position + 3;
				}
			}
		}
	}

	for(int o = 0; o < (position); o = o + 3)
	{
		cout << holder[o] << holder[o+1] << holder[o+2] << endl;
	}

}
